/*Dato un numero N intero positivo, stampare la somma dei primi N numeri primi alternati (uno s√¨ e uno no)*/



#include <stdio.h>

int main() {
    int n, numero = 2, somma = 0, contatore = 0;
    printf("Inserisci i numeri primi: ");
    scanf("%d", &n);

    while (n <= 0) {
        printf("Il numero inserito deve essere positivo. Riprova: ");
        scanf("%d", &n);
    }

    while (n > 0) {
        int uno = 1;

        for (int i = 2; i <= numero / 2; i++) {
            if (numero % i == 0) {
                uno = 0;
                break;
            }
        }

        if (uno) {
            printf("%d\n", numero);
            n--;
            somma += numero;
        }
        numero++;
    }

    printf("La somma risulta: %d", somma);
    return 0;
}
